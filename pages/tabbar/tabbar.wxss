/* pages/tabBar/tabBar.wxss */
.tab-bar{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.tab-item{
  height: 100%;
  width: 33.3%;
}
.tab-icon{
  width: 59rpx;
  height: 59rpx;
  display: block;
  margin: 9rpx auto 0;
}
.tab-text{
  opacity: 0.5;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #6F99BA;
  letter-spacing: 0;
  text-align: center;
  width: 100%;
  height: 30rpx;
  margin: 2rpx 0 0;
  line-height: 30rpx;
}
.tab-select{
  opacity: 0.9;
  color: #6F99BA;
}