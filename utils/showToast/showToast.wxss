
/*水平居中必备样式*/  
.toast-center {  
  position: fixed;  
  z-index: 9999999;  
  width: 100%;  
  height: 100%;  
  text-align: center;  
}  
.toast {  
  display: inline-block;  
  padding: 20rpx 20rpx;  
  max-width: 300px;  
  font-size: 14px;  
  color: #fff;  
  background: rgba(0, 0, 0, .5);  
  border-radius: 20rpx;  
  text-align: center;  
  position:fixed;
  bottom: 170rpx;
  left: 50%;
  transform: translate(-50%, -50%);
  /* margin-left: - */
}  
/*垂直居中必备样式*/  
.toast-center::after{  
  content: '';  
  display: inline-block;  
  width: 0;  
  height: 100%;  
  vertical-align: middle;  
}  
.toast .toast-icon {  
  display: block;  
  margin: 0 auto 10rpx auto;  
  width: 50rpx;  
  height: 50rpx;  
}  